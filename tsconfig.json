{
	"compilerOptions": {
		"typeRoots": [
			"./node_modules/@types",
			"./types"
		],

		"outDir": "./compiled",

		"types": [
			"feast"
		],

		"lib": [
			"es2017",
			"es2016",
			"es2015"
		],

		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"allowJs": false,

		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"allowSyntheticDefaultImports": false,
		"forceConsistentCasingInFileNames": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"alwaysStrict": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"declaration": true,
		"sourceMap": true,
		"newLine": "LF",
		"pretty": true
	},

	"exclude": [
		"node_modules",
		"./examples",
		"./compiled"
	]
}
